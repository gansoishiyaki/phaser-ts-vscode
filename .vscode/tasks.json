{
	"version": "2.0.0",
	"tasks": [{
    "label": "build-ts",
    "command": "yarn",
    "type": "shell",
    "group": "build",
    "isBackground": true,
    "args": [
      "--prefix",
      "${workspaceFolder}/src",
      "build"
    ],
    "problemMatcher": [
      {
        "base": "$ts-webpack",
        "pattern": {
            "regexp": "^$"
        },
        "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Project is running at.*$",
            "endsPattern": "^.*compiled successfully.*$"
        }
      }, {
        "base": "$tslint-webpack",
        "pattern": {
            "regexp": "^$"
        },
        "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Project is running at.*$",
            "endsPattern": "^.*compiled successfully.*$"
        }
      }
    ]
  },
  {
    "label": "dev-ts",
    "command": "yarn",
    "args": [
      "--prefix",
      "${workspaceFolder}/src",
      "dev"
    ],
    "type": "shell",
    "group": "build",
    "isBackground": true,
    "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
    "dependsOn": [
      "build-ts"
    ],
  }, ]
}